source "https://rubygems.org"

# Usar a gem github-pages para compatibilidade total com GitHub Pages
gem "github-pages", group: :jekyll_plugins

# Suporte para Windows
gem 'wdm', '>= 0.1.0' if Gem.win_platform?

# Gems adicionais compatÃ­veis com GitHub Pages
group :jekyll_plugins do
  gem 'jekyll-feed'
  gem 'jekyll-sitemap'
  gem 'jekyll-seo-tag'
end
